{
  "extends": "expo/tsconfig.base",
  "exclude": ["node_modules", "__tests__/**/*-test.ts"],
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@screens": ["src/Screens"],
      "@components": ["src/Components"],
      "@theme": ["src/Theme"],
      "@hooks": ["src/Hooks"],
      "@config": ["src/Config"],
      "@services": ["src/Services"],
      "@constants": ["src/Constants"],
      "@context": ["src/Context"],
      "@utils": ["src/Utils"],
      "@assets": ["src/Assets"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true
  }
}
